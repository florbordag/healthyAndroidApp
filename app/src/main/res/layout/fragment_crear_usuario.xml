<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrador.crearYlistarUsuario.CrearUsuario">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:src="@drawable/new_user" />

            <TextView
                android:id="@+id/textView12"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mail:"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etCrearMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:text=" @healthy.com"/>





            <TextView
                android:id="@+id/textView13"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nombre:"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etCrearNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"/>



            <TextView
                android:id="@+id/textView14"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Apellido:"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etCrearApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"/>



            <TextView
                android:id="@+id/textView15"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dni:"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etCrearDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"/>



            <TextView
                android:id="@+id/textView16"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:gravity="center"/>

            <EditText
                android:id="@+id/etCrearPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:text="123"
                android:enabled="false"/>

            <TextView
                android:id="@+id/textView17"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Rol:"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinnerRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:entries="@array/roles"/>



            <TextView
                android:id="@+id/textView18"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Fecha de Nacimiento"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="*Ingrese la fehca separada por barras en formato Dia/Mes/AÃ±o" />

            <EditText
                android:id="@+id/etCrearFecnac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="date"/>


            <Button
                android:id="@+id/guardarUsuario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="GUARDAR"
                android:layout_gravity="center"
                android:background="@color/botones"/>

        </LinearLayout>


    </ScrollView>


</FrameLayout>